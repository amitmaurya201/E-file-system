<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="io.jetprocess">
	<namespace>JET_PROCESS</namespace>
	<entity local-service="true" name="DocFile" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="docFileId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="nature" type="String" />
		<column name="type" type="String" />
		<column name="subject" type="String" />
		<column  name="fileNumber" type="String"/>
		<column name="category" type="String" />
		<column name="subCategory" type="String" />
    	<column name="remarks" type="String" />
    	<column name="reference" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="docFileId" />
		</order>

		<!-- Finder methods -->


		<finder name="groupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		
		<finder name="DocFileId" return-type="DocFile">
			<finder-column name="docFileId" />
		</finder>
		
		
		<finder name="Nature" return-type="DocFile">
			<finder-column name="nature" />
		</finder>

         <!--- Group Reference  -->
	   <reference entity="Group" package-path="com.liferay.portal" />
        
		<!-- References -->

		<reference entity="AssetEntry" package-path="com.liferay.portlet.asset" />
		<reference entity="AssetTag" package-path="com.liferay.portlet.asset" />
	</entity>
	

	<!-- Receipt Entity  -->
	<entity name="Receipt" local-service="true" remote-service="true" uuid="true">

		<!-- PK fields -->
		<column name="receiptId" primary="true" type="long" />

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="type" type="String" />
		<column name="deliveryMode" type="String" />
		<column name="receivedOn" type="Date" />
		<column name="letterDate" type="Date" />
		<column name="referenceNumber" type="String" />
		<column name="modeNumber" type="String" />
		<column name="organisation" type="String" />
		<column name="category" type="String" />
		<column name="subCategory" type="String" />
		<column name="subject" type="String" />
		<column name="remarks" type="String" />
		<column name="document" type="String" />
		<column name="minDeptOth" type="String" />
		<column name="name" type="String" />
		<column name="designation" type="String" />
		<column name="mobile" type="String" />
		<column name="email" type="String" />
		<column name="address" type="String" />
		<column name="country" type="String" />
		<column name="state" type="String" />
		<column name="district" type="String" />
		<column name="pinCode" type="String" />
		<column name="receiptNumber" type="String" />
		
		<!-- Order -->

		<order by="asc">
			<order-column name="category" />
		</order>

		<!-- Finder methods -->

		<finder name="groupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		
		
		<finder name="G_R" return-type="Collection">
			<finder-column name="groupId" />
			<finder-column name="receiptId" />
		</finder>
		
	   <!-- 	Group Reference  -->
	   <reference entity="Group" package-path="com.liferay.portal" />

		<!-- References -->

		<reference entity="AssetEntry" package-path="com.liferay.portlet.asset" />
		<reference entity="AssetTag" package-path="com.liferay.portlet.asset" />
	</entity>

</service-builder>